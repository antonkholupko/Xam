<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiParkApp.Views.AddLocationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Location" FontSize="Large" />
            <Label Text="Enter City:" FontSize="Medium"/>
            <Entry Text="{Binding Location.City, Mode=TwoWay}" />
            <Label Text="Enter Country:" FontSize="Medium"/>
            <Entry Text="{Binding Location.Country, Mode=TwoWay}" />
            <Button Text="Add" Clicked="AddLocationBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>